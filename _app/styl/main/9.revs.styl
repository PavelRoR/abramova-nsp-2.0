#revs
	padding 150px 0 90px
.carousel-inner
	box-shadow: 0px 4px 16.68px 2.32px rgba(0, 0, 0, 0.3);
	border-radius: 30px
#text-revs
	img.text-rev-img
		height 312px
		background-color #fff
		object-fit: contain
		background-position: center
		display block
		margin 0 auto
.carousel-control
	height 60px
	line-height: 60px
	width 60px
	border-radius: 100px
	background-color: #b05420
	top auto
	bottom -12px
	opacity 1
	&.left
	&.right
		font-size: 56px
		text-shadow: none
		color #fff
		font-family: GL
		text-transform: uppercase
		background-image: none
	// &.right
	// 	transform: rotate(180deg)
	&:hover
		opacity .8
.carousel-indicators
	position static
	margin 12px auto 0
	li
		border-color: #b05420
		transition: all .2s ease
		width 15px
		height 15px
		border-color: #b05420
		margin 0 1px
		transition: all .5s ease
	.active
		width 15px
		height 15px
		background-color: #b05420
.video-wrapper-revs
	width 100%
	img,
	iframe
		width 100%
		top 0