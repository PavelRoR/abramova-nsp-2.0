.author-list
	margin-bottom: 20px
	li
		list-style: none
		position relative
		color #fff
		margin-bottom: 25px
		padding-left: 45px
		min-height: 35px;
		display: flex;
		align-items: center;
		&:last-child
			margin-bottom: 0
		&:before
			content: ''
			display block
			position absolute
			border 1px solid rgb(176, 84, 32);
			border-radius: 50%;
			width: 40px;
			height: 40px;
			top: -2px
			left 0
		&:after
			content: ''
			display block
			position absolute
			border-radius: 50%;
			box-shadow: 0px 1px 16.2px 1.8px rgba(176, 84, 32, 0.95);
			width: 18px;
			height: 18px;
			top: 9px
			left 11px
			background-color: #b05420
