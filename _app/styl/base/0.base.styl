*
	margin 0
	padding 0
	outline none
body
	font-size: 18px
	font-family: G
	color #000
	background-color #fff
	line-height: 1.5
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.laptop-wrapper
	position relative
	z-index 50
	&:before
		content ''
		display block
		width 100%
		height 121%
		padding-top: 31.25%
		margin 0 auto
		top -1%
		left -1px
		right 0
		position absolute
		background-image url(../img/images/laptop.png)
		background-repeat no-repeat
		background-position: center
		background-size cover
.video-wrapper
	margin 0 auto
	position relative
	width 90%
	top 0
	// z-index 60
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 85%
		height 100%
		display block
		background-color #000
		border-radius 5px
		border: 0
		top 3%
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
.button
	display block
	text-align center
	margin 0 auto
	color: rgb(255, 255, 255);
	box-shadow: inset 0px 1px 8.7px 1.3px rgba(255, 255, 255, 0.57), 0px 1px 35px 0px rgba(176, 84, 32, 0.004), 0 3px 0 0 #C95314
	width: 100%
	max-width: 384px;
	padding 33px 10px
	background-color: #b05420
	background-image linear-gradient(to top, #b05420, #df6b29)
	border-radius: 50px
	text-decoration none
	transition: all .4s ease
	&:focus
		text-decoration none
		color #fff
	&:hover
		text-decoration none
		color #fff
		background-image linear-gradient(to bottom, #b05420, #df6b29)
		box-shadow: inset 0px 1px 4px 1.3px rgba(255, 255, 255, 0.8), 0px 1px 35px 0px rgba(176, 84, 32, 0.004), 0 0 0 0 #C95314
		transform: translateY(3px)
.general-title
	text-align center
	font-size: 35px;
	font-family: GBd
	color: rgb(176, 84, 32);
	font-weight: bold;
	text-transform: uppercase;
	line-height: 1;
	margin-bottom: 50px
	&-white
		color #fff