#prices
	padding 150px 0 90px
	background-image url('../img/images/for.png')
	background-repeat no-repeat
	background-position: center bottom 90px
.packet
	border-radius: 30px;
	box-shadow: 0px 1px 44.16px 1.84px rgba(0, 0, 0, 0.3);
	width 100%
	max-width: 351px;
	padding 30px
	margin 0 auto 30px
	background-color #fff
	text-align center
.packet-head-title
	color #b05420
	font-size: 22px
	font-family: GBk
	font-weight: 900
	text-transform uppercase
.modal-up
	display inline-block
	font-size: 16px
	color: rgba(0,0,0,.8)
	border-bottom: 1px dotted
	transition: all .4s ease
	margin 10px 0 25px
	&:focus
		color: rgba(0,0,0,.8)
		text-decoration none
	&:hover
		color #000
		border-bottom-color: transparent
.cost
	font-size: 24px
	font-family: GBd
	font-weight: bold
	margin-bottom: 25px
	span
		text-transform uppercase
		display block
		font-family: GBk
		font-weight: 900
		font-size: 36px
.prepayment
	&-title
		font-family: GBk
		font-weight: 900
		font-size: 28px
		color red
		text-transform uppercase
		margin-top 20px
	&-text
		font-size: 20px
		margin 5px 0 20px