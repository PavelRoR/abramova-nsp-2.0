#main
	padding 0 0 150px
	background-color: #FFE9DB
	background-image url(../img/images/main-img-2.png)
	background-repeat no-repeat
	background-position: bottom -30px right 130px
	background-size: 600px
	position relative
	.container
		position relative
		z-index 20
	&:before
		content ''
		display block
		width 100%
		max-width 1920px
		height 797px
		background-image url(../img/images/clouds.png)
		background-repeat no-repeat
		background-position: center
		background-size contain
		position: absolute
		margin 0 auto
		left 0
		right 0
		bottom: -520px
.main-title
	font-size: 50px;
	font-family: GBk
	font-weight: 900
	color: rgb(176, 84, 32);
	text-transform: uppercase;
	line-height: 1.2;
	small
		display block
		font-size: 18px
		font-family: G
		font-weight: normal
		margin 10px 0 20px
		width 100%
		max-width 600px
		color: #000
		text-transform none
