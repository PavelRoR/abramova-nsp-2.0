.button-main
	margin 20px auto 20px 0
.main-info
	color #d25f1e
	font-size: 16px
	font-style: italic
	margin 20px 0 0
	span
		display inline-block
	&:last-of-type
		margin 10px 0 50px
.button-main
	margin-left: 0
.footnote
	border-radius: 60px;
	background-color: rgba(#fff,.9)
	box-shadow: 0px 1px 44.16px 1.84px rgba(0, 0, 0, 0.3);
	width: 100%
	max-width: 460px
	color: rgb(176, 84, 32);
	padding 45px 35px
	position: absolute
	&:before
		content '+'
		display block
		position absolute
		font-size: 36px;
		font-family: GBd
		color: rgb(255, 255, 255);
		font-weight: bold;
		line-height: 50px
		text-align: center;
		border-radius: 50%;
		box-shadow: 0px 1px 16.2px 1.8px rgba(176, 84, 32, 0.95);
		width: 50px;
		height: 50px;
		top -10px
		left -10px
		background-color: #b05420
	&-main
		top 360px
		right 0
	&-title
		text-transform uppercase
		font-size: 16px
		font-family: GM
		font-weight: 600
		margin-bottom: 10px
		color #000
	&-about
		background-color #fff